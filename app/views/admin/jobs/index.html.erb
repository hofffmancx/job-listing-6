<div class="pull-right">
  <%= link_to("管理员添加工作", new_admin_job_path, :class => "btn btn-default" ) %>
</div>

<br><br>

<table class="table table-boldered">
  <% @jobs.each do |job| %>
  <tr>
    <td>
      <%= link_to(job.title, admin_job_path(job)) %>
    </td>
    <td>
      <%= link_to("管理员编辑", edit_admin_job_path(job)) %> |
      <%= link_to("管理员删除", admin_job_path(job), :method => :delete, :data => { :confirm => "管理员您确定要删除吗？" }) %>
    </td>
    <td>
      <%= job.created_at %>
    </td>
  </tr>
      <% end %>
    </table>
